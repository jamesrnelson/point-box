<!DOCTYPE html>
<html>
  <head>
    <title>PointBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <div class="topnav">
        <a href="/" class="float_left banner">PointBox</a>
        <a href="/users/#{current_user.id}" class="float_right">Logged in as, <%= current_user.email %></a>
        <a href="/logout" class="float_right">Log out</a>
      </div>
    <% else %>
      <div class="topnav">
        <a href="/" class="float_left banner">PointBox</a>
        <a href="/users/new" class="float_right">Create New Account</a>
        <a href="/login" class="float_right">Log in</a>
      </div>
    <% end %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end %>
    <%= yield %>
  </body>
</html>
