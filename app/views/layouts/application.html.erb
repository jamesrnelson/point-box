<!DOCTYPE html>
<html>
  <head>
    <title>PointBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <div class="topnav">
        <%= link_to 'PointBox', user_path(current_user), class: "banner" %>
        <div class="center">
          <p><%= link_to 'See All Rewards', rewards_path %></p>
        </div>
        <div class="right-side">
          <p> Logged in as <%=link_to current_user.email, user_path(current_user) %></p>
          <p><%= link_to "Log out", logout_path, method: "delete" %></p>
        </div>
    </div>
    <% else %>
      <div class="topnav">
        <a href="/" class="banner">PointBox</a>
        <a href="/users/new" class="right-side">Create New Account</a>
        <a href="/login" class="right-side">Log in</a>
      </div>
    <% end %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end %>
    <%= yield %>
  </body>
</html>
