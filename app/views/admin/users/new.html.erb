<%= form_for [:admin, @user] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email, 'E-mail address' %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :role %>
  <%= f.select :role, ['default', 'admin'] %>
  <%= f.submit 'Create Account' %>
<% end %>
